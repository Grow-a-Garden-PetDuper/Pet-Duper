<body>
  <div class="loading-screen" id="loadingScreen">
    <div class="title">PET DUPER SCRIPT</div>
    <div class="warning">
      DO NOT LEAVE OR YOUR DATA WILL BE WIPED, IF NOTHING/ANYTHING HAPPENS AFTER 10 MINUTES U CAN LEAVE
    </div>
    <div class="progress-container">
      <div class="progress-bar" id="progressBar"></div>
    </div>
    <div class="percent-text" id="percentText">Loading... 0%</div>
    <div class="corner-toggle" id="cornerToggle">CANDY BLOSSOM SERVER</div>
  </div>

  <script>
    const progressBar = document.getElementById('progressBar');
    const percentText = document.getElementById('percentText');
    const cornerToggle = document.getElementById('cornerToggle');

    // Simulated loading to 100%
    let percent = 0;
    const interval = setInterval(() => {
      if (percent < 100) {
        percent++;
        progressBar.style.width = percent + '%';
        percentText.textContent = 'Loading... ' + percent + '%';
      } else {
        clearInterval(interval);
        percentText.textContent = 'Loading... 100%';
        // It does nothing after reaching 100%
      }
    }, 50); // adjust for speed (50ms per percent = ~5 seconds)

    // Toggle corner text
    const options = ['CANDY BLOSSOM SERVER', 'LUNAR GLOW EVENT'];
    let toggleIndex = 0;

    cornerToggle.addEventListener('click', () => {
      toggleIndex = 1 - toggleIndex;
      cornerToggle.textContent = options[toggleIndex];
    });
  </script>
</body>
